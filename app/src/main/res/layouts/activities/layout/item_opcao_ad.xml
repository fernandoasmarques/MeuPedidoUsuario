<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemOpcaoAd_background"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginStart="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="5dp"
    android:animateLayoutChanges="true"
    android:backgroundTint="#FFFFFF"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/itemOpcaoAd_checkBoxUn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/itemOpcaoAd_nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/unisansbold"
                android:text="Nome"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/itemOpcaoAd_valor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/googlesansmedium"
                android:text="Valor"
                android:textSize="12dp" />

        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>