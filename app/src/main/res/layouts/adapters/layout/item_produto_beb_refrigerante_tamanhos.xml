<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemProdutoBebTamanhos_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:background="#ff6600">

    <LinearLayout
        android:padding="5dp"
        android:paddingStart="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/itemProdutoBebTamanhos_tamanho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/googlesansbold"
            android:gravity="center"
            android:text="tamanho"
            android:alpha=".8"
            android:textColor="#000000"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/itemProdutoBebTamanhos_tamanhoPreco"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:alpha=".6"
            android:fontFamily="@font/googlesansregular"
            android:gravity="center"
            android:text="preÃ§o"
            android:textColor="#000000"
            android:textSize="12dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/itemProdutoBebTamanhos_adicionarProduto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/googlesansregular"
        android:gravity="center"
        android:text="+"
        android:background="#c9ffdd"
        android:textColor="#000000"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemProdutoBebTamanhos_retirarProduto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#ffc9c9"
        android:fontFamily="@font/googlesansregular"
        android:gravity="center"
        android:text="-"
        android:textColor="#000000"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemProdutoBebTamanhos_qtdeProduto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#F5F5F5"
        android:fontFamily="@font/googlesansregular"
        android:gravity="center"
        android:text="0"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".85" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".70" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".55" />

</androidx.constraintlayout.widget.ConstraintLayout>